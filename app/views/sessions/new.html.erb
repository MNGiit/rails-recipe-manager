<h1>Log in</h1>

<%= link_to "Log in using Github", '/auth/github' %>
<%= form_for @user, url: {action: "create", controller: "sessions"} do |f| %>

    <!-- Email -->
    <%= f.label :email %>
    <%= f.email_field :email %><br>

    <!-- Password -->
    <%= f.label :password %>
    <%= f.password_field :password %><br>

    <!-- Submit -->
    <%= f.submit "Log in" %>

<% end %>